@{
    List<Game> games = ViewData["Games"] as List<Game>;

}
  
<div class="cards-container">
     <div class="games-cards-header" >
      <a asp-route-id="">All Games</a>
      <a asp-route-id="pc">Pc</a>
      <a asp-route-id="console">Console</a>
      <a asp-route-id="playstation">Playstation</a>

    </div>
    <br />
    <br />
    <h2>Released games </h2>

    <div class="games-cards-container" >
        @{
            
            foreach (Game game in games)
            {
                if(game.GameState.Name.ToLower() == "released")
                    @await Html.PartialAsync("../Shared/GameCard", game );
            }

        }
        
    </div>
    <br />
    <br />
    <hr />
    <br />
    <br />

    <h2>Early Access </h2>

    <div class="games-cards-container">

        @{
            
            foreach (Game game in games)
            {
                
                    if (game.GameState.Name.ToLower() == "earlyaccess")
                        @await Html.PartialAsync("../Shared/GameCard", game );
            }

        }



    </div>
     <br />
     <br />
     <hr />
     <br />
     <br />
     <h2>Upcoming games </h2>

    <div class="games-cards-container" >

        @{
            
            foreach (Game game in games)
            {
                if (game.GameState.Name.ToLower() == "upcoming")
                    @await Html.PartialAsync("../Shared/GameCard", game );
            }

        }
        
        

    </div>
     

    <a asp-asp-controller="Home" asp-action="Games"></a>

</div>

