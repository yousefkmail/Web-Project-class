<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <partial name="Navbar" />
   
    <div>
     <main role="main" class="pb-3">
            @RenderBody()      
     </main>
    </div>

    <partial name="Footer" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 <script>
        var observer = new IntersectionObserver(function(entries) {
       entries.forEach((entry)=>{

           if(entry.isIntersecting === true){
                entry.target.classList.add("inner-card-active");
    }
       })

   
}, { threshold: [0] });


        const elements = document.getElementsByClassName("game-card-container");
            for (let i = 0; i < elements.length; i++) {
        observer.observe(elements[i]);
            }

</script>

</body>

</html>
